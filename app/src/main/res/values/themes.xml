<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <item name="iconTint">@android:color/white</item>

    </style>

    <style name="DialogsThemePrimary" parent="DialogsThemeCustomBackground">
    <item name="dialog_background_color">@color/colorPrimary</item>
</style>

    <style name="DialogsThemeSuccess" parent="DialogsThemeCustomBackground">
        <item name="dialog_background_color">@color/success</item>
        <item name="colorPrimaryDark">@color/success</item>
    </style>

    <style name="DialogsThemeError" parent="DialogsThemeCustomBackground">
        <item name="dialog_background_color">@color/error</item>
        <item name="colorPrimaryDark">@color/error</item>
    </style>

    <style name="DialogsThemeAlert" parent="DialogsThemeCustomBackground">
        <item name="dialog_background_color">@color/alert</item>
        <item name="colorPrimaryDark">@color/alert</item>
    </style>

    <style name="DialogsThemeCustomBackground" parent="DialogsThemeBase">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogsThemeBase" parent="@style/Theme.MaterialComponents.Light.Dialog">
        <item name="dialog_background_color">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorPrimaryDark</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="iconTint">@android:color/white</item>
        <item name="android:windowAnimationStyle">@style/DialogsAnimation.Window</item>
    </style>

</resources>