<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="iconTint">@android:color/white</item>
        <!--  <item name="actionBarTheme">@style/ToolbarLight</item> -->
        <!-- <item name="colorButtonNormal">@color/colorAccent</item> -->
        <!-- <item name="colorOnPrimary">@android:color/white</item>-->
        <!--<item name="colorOnPrimaryDisabled">@android:color/white</item>-->
    </style>

    <style name="DialogsThemePrimary" parent="DialogsThemeCustomBackground">
        <item name="dialog_background_color">@color/colorPrimary_70</item>
    </style>

    <style name="DialogsThemeSuccess" parent="DialogsThemeCustomBackground">
        <item name="dialog_background_color">@color/success_70</item>
        <item name="colorPrimaryDark">@color/success</item>
    </style>

    <style name="DialogsThemeError" parent="DialogsThemeCustomBackground">
        <item name="dialog_background_color">@color/error_70</item>
        <item name="colorPrimaryDark">@color/error</item>
    </style>

    <style name="DialogsThemeAlert" parent="DialogsThemeCustomBackground">
        <item name="dialog_background_color">@color/alert_70</item>
        <item name="colorPrimaryDark">@color/alert</item>
    </style>

    <style name="DialogsThemeCustomBackground" parent="DialogsThemeBase">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogsThemeBase" parent="@style/Theme.MaterialComponents.Light.Dialog">
        <item name="dialog_background_color">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorPrimaryDark</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="iconTint">@android:color/white</item>
        <item name="android:windowAnimationStyle">@style/DialogsAnimation.Window</item>
    </style>

</resources>