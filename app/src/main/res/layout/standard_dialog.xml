<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:minWidth="280dp"
                                                   android:background="@android:color/background_light"
                                                   tools:showIn="@layout/standard_container_dialog"
                                                   android:layout_height="wrap_content" android:id="@+id/scd_container">

    <androidx.appcompat.widget.AppCompatTextView
            android:text="Headline 6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/sd_title" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sd_image" android:layout_marginTop="32dp"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:textAppearance="@style/Head4Bold"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/sd_description"
            tools:visibility="visible" android:visibility="gone"/>
    <androidx.appcompat.widget.AppCompatTextView
            android:text="Apparently we had reached a great height in the atmosphere, for the..."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/sd_description" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sd_title"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:textAppearance="@style/Body2Light"
            android:lineSpacingExtra="5sp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/sd_space" android:visibility="gone"
            tools:visibility="visible" android:maxLines="3" android:layout_marginTop="20dp"/>
    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="88dp"
            android:layout_height="88dp" app:srcCompat="@android:drawable/btn_plus"
            android:id="@+id/sd_image"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/sd_title"
            tools:visibility="visible" android:visibility="gone"/>

    <com.google.android.material.button.MaterialButton
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sd_right_button"
            style="@style/textMaterialButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintTop_toBottomOf="@+id/sd_space"
            android:layout_marginTop="22dp"
            tools:visibility="visible"
            android:visibility="gone"
            android:textAppearance="@style/Body1Regular"/>

    <com.google.android.material.button.MaterialButton
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sd_left_button"
            style="@style/textMaterialButton"
            app:layout_constraintBottom_toBottomOf="@+id/sd_right_button"
            app:layout_constraintEnd_toStartOf="@+id/sd_right_button"
            tools:visibility="visible"
            android:visibility="gone" android:fontFamily="@font/book" android:textAppearance="@style/Body1Light"/>
    <Space
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@+id/sd_description"
            app:layout_constraintBottom_toTopOf="@+id/sd_right_button" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="42dp" android:id="@+id/sd_space" app:layout_constraintHorizontal_bias="0.5"
            tools:visibility="visible"
            android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>