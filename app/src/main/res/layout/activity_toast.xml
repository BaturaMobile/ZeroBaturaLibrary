<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/toast_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ToastActivity" >
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/normal_snakbar" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:text="Normal SnackBar"/>
    <Button
            android:text="Two lines SnackBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/two_lines_snackbar"
            app:layout_constraintTop_toBottomOf="@+id/normal_snakbar"
            app:layout_constraintStart_toStartOf="@+id/normal_snakbar"
            app:layout_constraintEnd_toEndOf="@+id/normal_snakbar"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_snackbar"
            app:layout_constraintTop_toBottomOf="@+id/two_lines_snackbar"
            app:layout_constraintStart_toStartOf="@+id/normal_snakbar"
            app:layout_constraintEnd_toEndOf="@+id/normal_snakbar" android:text="Buttton Snackbar"/>
    <Button
            android:text="Two lines Long button snackbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twolines_long_button_snackbar"
            app:layout_constraintStart_toStartOf="@+id/twolines_button_snackbar"
            app:layout_constraintEnd_toEndOf="@+id/twolines_button_snackbar"
            app:layout_constraintTop_toBottomOf="@+id/twolines_button_snackbar"/>
    <Button
            android:text="Icon snackBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon_snackbar"
            app:layout_constraintTop_toBottomOf="@+id/twolines_long_button_snackbar"
            app:layout_constraintEnd_toEndOf="@+id/twolines_long_button_snackbar"
            app:layout_constraintStart_toStartOf="@+id/twolines_long_button_snackbar"/>
    <Button
            android:text="Two Lines Button SnackBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twolines_button_snackbar" app:layout_constraintStart_toStartOf="@+id/button_snackbar"
            app:layout_constraintEnd_toEndOf="@+id/button_snackbar"
            app:layout_constraintTop_toBottomOf="@+id/button_snackbar"/>
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>