<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Dialogs">
    <com.google.android.material.button.MaterialButton
            android:text="Dialog Alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ad_dialog_alert" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"/>

    <com.google.android.material.button.MaterialButton
            android:text="Dialog Head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ad_dialog_head" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489" app:layout_constraintTop_toBottomOf="@+id/ad_dialog_head_img"/>
    <com.google.android.material.button.MaterialButton
            android:text="Dialog Img Head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ad_dialog_head_img" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_dialog_alert"/>
    <Button
            android:text="Color Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ad_primary" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Color Success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ad_success" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/ad_primary"/>
    <Button
            android:text="Color Error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ad_error" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/ad_success"/>
    <Button
            android:text="Color Alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ad_alert" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/ad_error"/>
    <Button
            android:text="Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ad_default" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/ad_alert"/>
</androidx.constraintlayout.widget.ConstraintLayout>