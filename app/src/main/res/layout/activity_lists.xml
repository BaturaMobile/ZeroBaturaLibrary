<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ListsActivity" android:minHeight="48dp">

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline7"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.1"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline8"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.9"/>
    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="44dp"
            android:layout_height="44dp" app:srcCompat="@drawable/avatar_40"
            android:id="@+id/list_primary_image"
            app:layout_constraintTop_toTopOf="parent" android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/list_title"
            app:layout_constraintHorizontal_chainStyle="spread_inside" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="6dp" android:layout_marginBottom="6dp"
            app:layout_constraintStart_toEndOf="@+id/guideline7" app:layout_constraintHorizontal_bias="0.48"
            android:layout_marginEnd="16dp"/>
    <androidx.appcompat.widget.AppCompatTextView
            android:text="hfdhfakojjdjf jdojakldfjakfj"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/list_title"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/Body2Regular"
            app:layout_constraintBottom_toTopOf="@+id/list_subtitle" android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@+id/list_primary_image"
            app:layout_constraintEnd_toStartOf="@+id/sd_left_button" android:layout_marginEnd="32dp" android:lines="1"/>
    <androidx.appcompat.widget.AppCompatTextView
            android:text="Caption line"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:id="@+id/list_subtitle"
            android:textAppearance="@style/Caption1Regular"
            app:layout_constraintTop_toBottomOf="@+id/list_title" android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/list_title"/>
    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_view"
            android:id="@+id/list_secondary_image"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline8"
            android:visibility="gone"
    />

    <com.google.android.material.button.MaterialButton
            android:text="Button"
            android:layout_height="wrap_content"
            android:id="@+id/sd_left_button"
            style="@style/textMaterialButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline8" android:layout_width="81dp"
            tools:visibility="visible"
            android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>